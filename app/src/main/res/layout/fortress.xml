<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/fortress_title"
        android:text="The Fortress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/title_text" />
    <elosoft.coinz.Components.TextEmitter
        android:id="@+id/fortress_welcome_message"
        app:layout_constraintTop_toBottomOf="@id/fortress_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:displayText="Welcome sire. There are still coinz available to collect today."
        app:displayRate="20"
        style="@style/welcome_message" />

    <TextView
        android:id="@+id/fortress_peny_text"
        style="@style/text_body.fortress_coin_name"
        android:layout_marginTop="100dp"
        android:text="PENY"
        app:layout_constraintTop_toTopOf="@id/fortress_title"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/fortress_dolr_text"
        style="@style/text_body.fortress_coin_name"
        android:text="DOLR"
        app:layout_constraintTop_toTopOf="@id/fortress_peny_text"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/fortress_shil_text"
        style="@style/text_body.fortress_coin_name"
        android:text="SHIL"
        app:layout_constraintTop_toTopOf="@id/fortress_dolr_text"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/fortress_quid_text"
        style="@style/text_body.fortress_coin_name"
        android:text="QUID"
        app:layout_constraintTop_toTopOf="@id/fortress_shil_text"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        style="@style/text_body.fortress_arrow"
        android:text="@string/fortress_arrow"
        app:layout_constraintTop_toTopOf="@id/fortress_peny_text"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        style="@style/text_body.fortress_arrow"
        android:text="@string/fortress_arrow"
        app:layout_constraintTop_toTopOf="@id/fortress_dolr_text"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        style="@style/text_body.fortress_arrow"
        android:text="@string/fortress_arrow"
        app:layout_constraintTop_toTopOf="@id/fortress_shil_text"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        style="@style/text_body.fortress_arrow"
        android:text="@string/fortress_arrow"
        app:layout_constraintTop_toTopOf="@id/fortress_quid_text"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/fortress_peny_amount_text"
        style="@style/text_body.fortress_coin_amount"
        app:layout_constraintTop_toTopOf="@id/fortress_peny_text"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/fortress_dolr_amount_text"
        style="@style/text_body.fortress_coin_amount"
        app:layout_constraintTop_toTopOf="@id/fortress_dolr_text"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/fortress_shil_amount_text"
        style="@style/text_body.fortress_coin_amount"
        app:layout_constraintTop_toTopOf="@id/fortress_shil_text"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/fortress_quid_amount_text"
        style="@style/text_body.fortress_coin_amount"
        app:layout_constraintTop_toTopOf="@id/fortress_quid_text"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/fortress_peny_amount_gold_text"
        style="@style/text_body.fortress_gold_amount"
        app:layout_constraintTop_toTopOf="@id/fortress_peny_text"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/fortress_dolr_amount_gold_text"
        style="@style/text_body.fortress_gold_amount"
        app:layout_constraintTop_toTopOf="@id/fortress_dolr_text"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/fortress_shil_amount_gold_text"
        style="@style/text_body.fortress_gold_amount"
        app:layout_constraintTop_toTopOf="@id/fortress_shil_text"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/fortress_quid_amount_gold_text"
        style="@style/text_body.fortress_gold_amount"
        app:layout_constraintTop_toTopOf="@id/fortress_quid_text"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>