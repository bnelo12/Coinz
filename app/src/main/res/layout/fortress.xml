<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/fortress_title"
        android:text="The Fortress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/title_text" />
    <elosoft.coinz.Components.TextEmitter
        android:id="@+id/fortress_welcome_message"
        app:layout_constraintTop_toBottomOf="@id/fortress_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:displayText="Welcome sire. There are still coinz available to collect today."
        app:displayRate="20"
        style="@style/welcome_message" />
    <TextView
        android:id="@+id/fortress_pnny_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:text="16 PNNY   -> 01.3453 GOLD"
        style="@style/text_body" />
    <TextView
        android:id="@+id/fortress_dolr_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/fortress_pnny_text"
        android:text="07 DOLR   ->   11.2121 GOLD"
        style="@style/text_body" />
    <TextView
        android:id="@+id/fortress_deposit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/fortress_dolr_text"
        android:layout_marginTop="60dp"
        android:text="15/25 Coinz Deposited Today"
        style="@style/text_body" />
    <TextView
        android:id="@+id/fortress_coins_found_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/fortress_deposit_text"
        android:text="25/50 Coinz Found Today"
        style="@style/text_body" />
</android.support.constraint.ConstraintLayout>